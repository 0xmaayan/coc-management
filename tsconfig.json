{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2020"
  },
  "include": ["./app.ts", "./scripts/publish.ts"],
  "exclude": ["node_modules"]
}
